<Window x:Class="AsyncWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="syncBtn" Content="Sync Example" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Height="29" Width="204" Click="SyncBtn_Click"/>
        <Button x:Name="asyncBtn" Content="Async Example" HorizontalAlignment="Center" VerticalAlignment="Top" Height="31" Width="204" Margin="0,72,0,0" Click="AsyncBtn_Click"/>
        <TextBlock x:Name="outputTxt" HorizontalAlignment="Center" Margin="0,232,0,0" VerticalAlignment="Top" Width="636" Height="155"/>
        <Button x:Name="asyncParallelBtn" Content="Async Parallel" HorizontalAlignment="Center" Margin="0,126,0,0" VerticalAlignment="Top" Width="204" Height="29" Click="AsyncParallelBtn_Click"/>

    </Grid>
</Window>
